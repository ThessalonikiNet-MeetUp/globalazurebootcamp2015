@model IEnumerable<MySQLTestApp.Models.Customer>

@{
    ViewBag.Title = "Best Customers";
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            Customer Name
        </th>
        <th>
            Revenue
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.customer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalRevenue)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.id })
        </td>
    </tr>
}

</table>
